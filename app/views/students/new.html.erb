<h1>Student Form</h1>
<% if @student_info %>
  <%= form_tag students_path do %>
    <%= text_field_tag :'student[first_name]', @student_info[:first_name] %>
    <%= text_field_tag :'student[last_name]', @student_info[:last_name] %>
    <%= submit_tag :'Submit Student'  %>
  <% end %>
  <h2><%= @student_info[:first_name] %></h2>
  <h2><%= @student_info[:last_name] %></h2>
<% else %>
  <%= form_tag students_path do %>
    <%= text_field_tag :'student[first_name]' %>
    <%= text_field_tag :'student[last_name]' %>
    <%= submit_tag :'Submit Student'  %>
  <% end %>
<% end %>

<% @students.each do |student| %>
  <%= student.to_s %>
<% end %>
